{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<header>
<div class="container">
<div class="row justify-content-center">
<div class="col-lg-6 col-lg-offset-3 text-center">
<br />
<div class="widgetheading">
<h1 class="hello-box">{{@blog.title}}</h1>
<p class="hello-box">{{@blog.description}}</P>
</div>
<div class="socialicons">
<a href="#" class="rssicon" title="RSS Feed" target="_blank" rel="noopener"><i class="fa fa-rss" aria-hidden="true"></i></a>
<a href="#" class="twittericon" title="Follow us on Twitter" target="_blank" rel="nofollow noopener"><i class="fa fa-twitter" aria-hidden="true"></i></a>
<a href="#" class="fbicon" title="Follow us on Facebook" target="_blank" rel="nofollow noopener"><i class="fa fa-facebook" aria-hidden="true"></i></a>
<a href="#" class="instagram" title="Santhosh veer on Instagram" target="_blank" rel="nofollow noopener"><i class="fa fa-instagram" aria-hidden="true"></i></a>
<a href="#" class="emailicon" title="Subscribe us" target="_blank" rel="nofollow noopener"><i class="fa fa-envelope-o" aria-hidden="true"></i></a>
</div>
</div>
</div>
</div>
</header>
<hr>

<div class="container">
<div class="row justify-content-center">
<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

{{#foreach posts}}
<article class="{{post_class}}">
<h2 class="post-home"><a href="{{url}}" title="{{title}}">{{title}}</a></h2>
<div class="home-meta">
Posted on <time datetime="{{date updated_at format='YYYY-MM-DD'}}">{{date updated_at format="DD MMMM YYYY"}}</time> by {{#author}}<span><a href="{{url}}" rel="author">{{name}}</a></span>{{/author}}
</div>
<hr>
</article>
{{/foreach}}
<br />
<div class="text-center">
{{pagination}}
</div>

</div>
</div> 
</div> <!-- /.container -->
